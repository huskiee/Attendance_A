<%= form_with(model: [@user], url:edit_daily_info_user_attendances_path(@user), local: true, method: :patch) do |f| %>
<%#= form_with(model: @user, url: edit_overwork_permission_user_attendances_path, local: true, method: :patch) do |f| %>
  <% @attendances.each do |id, attendances| %>
  <%# @request_users.each do |request_user| %>
    <% user = User.find(id) %>
    <h4 class="modal-title center" style="text-align:center"><%= "【#{user.name}からの勤怠変更申請】" %></h4>
      <table class="table table-bordered table-striped table-condensed table-hover" id="table-attendances">
        <thead>
          <tr><!--rowspan:縦結合、colspan：横結合-->
            <th rowspan="3"><%= "日付" %></th>
            <th rowspan="3"><%= "曜日" %></th>
            <th colspan="4"><%= "変更前" %></th>
            <th colspan="4"><%= "変更後" %></th>
            <th rowspan="3"><%= "備考" %></th>
            <th rowspan="3"><%= "指示者確認印" %></th>
            <th rowspan="3"><%= "変更" %></th>
            <th rowspan="3"><%= "勤怠を確認する" %></th>
          </tr>
          <tr>
            <td colspan="2">出　社</td>
            <td colspan="2">退　社</td>
            <td colspan="2">出　社</td>
            <td colspan="2">退　社</td>
          </tr>
          <tr>
            <th>時</th>
            <th>分</th>
            <th>時</th>
            <th>分</th>
            <th>時</th>
            <th>分</th>
            <th>時</th>
            <th>分</th>
          </tr>              
        </thead>
        <% attendances.each do |day| %>
        <%# @attendance_lists[request_user.id].each do |day| %>
          <%= f.fields_for "attendances[]", day do |item| %>
          <%#= f.fields_for @attendances_lists[request_user.id] do |item| %>
            <tbody>
              <tr>
                <td><%= l(day.worked_on, format: :short) %></td>
                <td><%= $days_of_the_week[day.worked_on.wday] %></td>
                <td><%= l(day.edit_day_started_at, format: :hour) %></td>
                <td><%= l(day.edit_day_started_at, format: :minute) %></td>
                <td><%= l(day.edit_day_finished_at, format: :hour) %></td>
                <td><%= l(day.edit_day_finished_at, format: :minute) %></td>                      
                <td><%= l(day.last_edit_day_started_at, format: :hour) if day.last_edit_day_started_at.present? %></td>
                <td><%= l(day.last_edit_day_started_at, format: :minute) if day.last_edit_day_started_at.present? %></td>
                <td><%= l(day.last_edit_day_finished_at, format: :hour) if day.last_edit_day_finished_at.present? %></td>
                <td><%= l(day.last_edit_day_finished_at, format: :minute) if day.last_edit_day_finished_at.present? %></td>
                <td><%= day.work_description %></td>
                <td><%= item.select :daily_request_status, ['なし', '申請中', '承認', '否認'] %></td>
                <td><%= item.check_box :daily_change, id: "test" %></td>
                <td><%= link_to "確認",show_read_only_user_path(id), target: :_blank, class: "btn btn-primary" %></td>
              </tr>
            </tbody>
          <% end %>
        <% end %>
      </table>
    <% end %>
  <div class= center>
    <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
  </div>
<% end %>