<%= form_with(model: @user, url: update_basic_info_user_path(@user), local: true, method: :patch) do |f| %>
  <%= render 'shared/error_messages', object: @user %>
            
  <%= f.label :id, class: "label-#{yield(:class_text)}" %>
  <p><%= sprintf("%04d",@user.id) %></p>

  <%= f.label :name, class: "label-#{yield(:class_text)}" %>
  <p><%= @user.name %></p>

  <%= f.label :department, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :department, class: "form-control" %>

  <%= f.label :basic_work_time, class: "label-#{yield(:class_text)}" %>
  <%= f.time_field :basic_work_time, class: "form-control" %>

  <%= f.label :designated_work_time, class: "label-#{yield(:class_text)}" %>
  <%= f.time_field :designated_work_time, class: "form-control" %>

  <div class="center">
    <%= f.submit yield(:button_text), class: "btn btn-primary btn-#{yield(:class_text)}" %>
    <button type="button" class="btn btn-default btn-<%= yield(:class_text) %>" data-dismiss="modal"  aria-label="Close">
    キャンセル
    </button>
  </div>
<% end %>